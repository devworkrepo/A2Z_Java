<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="LineTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyle1" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="TextStyle2" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <!-- <item name="android:textStyle">bold</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="AppEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_white_0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="AppEditText2" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_2</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_white_5</item>
        <item name="android:textSize">17sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>


    <!--profile-->

    <style name="TextStyleProfile1" parent="android:Widget.TextView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textSize">15sp</item>

    </style>


    <style name="TextStyleProfile2" parent="android:Widget.TextView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/text_color_3</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="TextStyleCommission" parent="android:Widget.TextView">


        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/text_color_2</item>
        <item name="android:textSize">12sp</item>

    </style>


    <style name="TextStyleAdmin1" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_2</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="TextStyleAdmin2" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_3</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="TextStyleAdmin3" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_2</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="TextStyleAdmin4" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="CreateRetailerTextView" parent="android:Widget.TextView">

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="CreateRetailerEditText" parent="android:Widget.EditText">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_white_0</item>
        <item name="android:enabled">false</item>
        <item name="android:paddingRight">2.5dp</item>
        <item name="android:paddingLeft">2.5dp</item>

    </style>

    <style name="CreateRetailerLinearLayout1" parent="android:Widget">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_margin">7.5dp</item>

    </style>

    <style name="CreateRetailerLinearLayout2" parent="android:Widget">


        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2.5dp</item>

    </style>


    <style name="TestStyleSlip1" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="TestStyleSlip2" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_2</item>
        <item name="android:textSize">14sp</item>

    </style>


    <style name="TextEditTextHeading" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/edit_text_heading</item>
        <item name="android:textSize">14sp</item>

    </style>


    <style name="circleImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="BottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>


    </style>


    <style name="AppEditTextNew" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="AppEditTextNew.Number" parent="AppEditTextNew">

        <item name="android:inputType">number</item>

    </style>


    <style name="AppEditTextNew.Mobile" parent="AppEditTextNew.Number">
        <item name="android:maxLength">10</item>
        <item name="android:hint">@string/mobile_number</item>

    </style>

    <style name="AppEditTextNew.Password" parent="AppEditTextNew.Mobile">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">20</item>
        <item name="android:hint">@string/password</item>

    </style>

    <style name="AppEditTextNew.Otp" parent="AppEditTextNew.Password">
        <item name="android:maxLength">6</item>
        <item name="android:hint">@string/otp</item>
    </style>

    <string name="mobile_number">Mobile Number</string>
    <string name="password">Password</string>
    <string name="otp">OTP</string>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigation.InActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="CalenderViewCustom" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorSurface">@color/white</item>
    </style>

</resources>
