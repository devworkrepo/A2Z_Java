<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.a2zsuvidhaa.in.fragment.AdminDashboardFragment">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:textSize="16sp"
           android:layout_marginTop="10dp"
           android:textColor="@color/text_color_1"
           android:text="Sales"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_marginTop="5dp"
           android:orientation="vertical"
           android:background="@drawable/bg_white_5">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:background="@drawable/bg_light_blue_5"
               android:gravity="center_vertical"
               android:padding="10dp"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_weight="3">
                   <TextView
                       style="@style/TextStyleAdmin4"
                       android:layout_weight="5"
                       android:text="Last Month Sales"/>
                   <TextView
                       style="@style/TextStyleAdmin4"
                       android:layout_gravity="center_vertical"
                       android:gravity="right"
                       android:id="@+id/tv_lmsCount"
                       android:paddingRight="10dp"
                       android:text="[0]"/>
               </LinearLayout>

               <TextView
                   style="@style/TextStyleAdmin4"
                   android:layout_width="wrap_content"
                   android:layout_weight="0"
                   android:text=" :  Rs. "/>
               <TextView
                   style="@style/TextStyleAdmin4"
                   android:id="@+id/tv_lms"
                   android:text="0.00"/>


           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_marginTop="2dp"
               android:padding="10dp"
               android:background="@drawable/bg_light_blue_5"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_weight="3">
                   <TextView
                       style="@style/TextStyleAdmin4"
                       android:layout_weight="5"
                       android:text="This Month Sales"/>
                   <TextView
                       style="@style/TextStyleAdmin4"
                       android:layout_gravity="center_vertical"
                       android:gravity="right"
                       android:id="@+id/tv_tmsCount"
                       android:paddingRight="10dp"
                       android:text="[0]"/>
               </LinearLayout>

               <TextView
                   style="@style/TextStyleAdmin4"
                   android:layout_width="wrap_content"
                   android:layout_weight="0"
                   android:text=" :  Rs. "/>
               <TextView
                   android:id="@+id/tv_tms"
                   style="@style/TextStyleAdmin4"
                   android:text="0.00"/>


           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_marginTop="2dp"
               android:background="@drawable/bg_light_blue_5"
               android:gravity="center_vertical"
               android:padding="10dp"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_weight="3">

                   <TextView
                       style="@style/TextStyleAdmin4"
                       android:layout_weight="5"
                       android:text="Today Sales" />
                   <TextView
                       style="@style/TextStyleAdmin4"
                       android:layout_gravity="center_vertical"
                       android:gravity="right"
                       android:id="@+id/tv_tsCount"
                       android:paddingRight="10dp"
                       android:text="[0]"/>
               </LinearLayout>

               <TextView
                   style="@style/TextStyleAdmin4"
                   android:layout_width="wrap_content"
                   android:layout_weight="0"
                   android:text=" :  Rs. "/>
               <TextView
                   style="@style/TextStyleAdmin4"
                   android:id="@+id/tv_ts"
                   android:text="0.00"/>


           </LinearLayout>

       </LinearLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:textSize="16sp"
           android:layout_marginTop="20dp"
           android:textColor="@color/text_color_1"
           android:text="Holiday List"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:layout_marginTop="5dp"
           android:orientation="vertical"
           android:background="@drawable/bg_white_5">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_height="wrap_content">



               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="0.5"
                   android:layout_width="0dp"
                   android:text="       S.No."/>
               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:gravity="center"
                   android:text="Holiday"/>
               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:layout_width="0dp"
                   android:text="Date"/>


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:background="@drawable/bg_warning_5"
               android:layout_marginTop="10dp"
               android:gravity="center_vertical"
               android:padding="10dp"
               android:layout_height="wrap_content">

               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="0.5"
                   android:layout_width="0dp"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:text="1"/>
               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:layout_width="0dp"
                   android:id="@+id/tv_holiday1"
                   android:textColor="@color/white"
                   android:text="N/A"/>
               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="1"
                   android:id="@+id/tv_holidayDate1"
                   android:layout_width="0dp"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:text="N/A"/>


           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:background="@drawable/bg_warning_5"
               android:layout_marginTop="2dp"
               android:gravity="center_vertical"
               android:padding="10dp"
               android:layout_height="wrap_content">

               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="0.5"
                   android:layout_width="0dp"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:text="2"/>
               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:layout_width="0dp"
                   android:id="@+id/tv_holiday2"
                   android:textColor="@color/white"
                   android:text="N/A"/>
               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="1"
                   android:id="@+id/tv_holidayDate2"
                   android:layout_width="0dp"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:text="N/A"/>


           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:background="@drawable/bg_warning_5"
               android:layout_marginTop="2dp"
               android:gravity="center_vertical"
               android:padding="10dp"
               android:layout_height="wrap_content">

               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="0.5"
                   android:layout_width="0dp"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:text="3"/>
               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:layout_width="0dp"
                   android:id="@+id/tv_holiday3"
                   android:textColor="@color/white"
                   android:text="N/A"/>
               <TextView
                   style="@style/TextStyleAdmin3"
                   android:layout_weight="1"
                   android:id="@+id/tv_holidayDate3"
                   android:layout_width="0dp"
                   android:textColor="@color/white"
                   android:gravity="center"
                   android:text="N/A"/>


           </LinearLayout>


       </LinearLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:textSize="16sp"
           android:layout_marginTop="20dp"
           android:textColor="@color/text_color_1"
           android:text="Bank Down"/>
       <TextView
           android:id="@+id/tv_bankDown"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_gravity="center_horizontal"
           android:ellipsize="marquee"
           android:focusable="true"
           android:padding="10dp"
           android:focusableInTouchMode="true"
           android:freezesText="true"
           android:gravity="center_horizontal"
           android:marqueeRepeatLimit="marquee_forever"
           android:paddingLeft="5dip"
           android:layout_marginTop="10dp"
           android:paddingRight="5dip"
           android:scrollHorizontally="true"
           android:shadowColor="#FF0000"
           android:shadowDx="1.5"
           android:shadowDy="1.3"
           android:background="@color/colorPrimary"
           android:shadowRadius="1.6"
           android:layout_alignParentBottom="true"
           android:singleLine="true"
           android:textColor="@android:color/white"
           android:textSize="16sp"
           android:text="All Banks are active :)"
           android:textStyle="bold" >
       </TextView>
       <TextView
           android:id="@+id/tv_incorrect"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:background="@drawable/bg_orange_5"
           android:gravity="center"
           android:padding="10dp"
           android:text="Password or Mobile number are incorrect!"
           android:textColor="@color/white"
           android:textSize="17sp"
           android:visibility="gone"
           tools:visibility="visible" />


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:textSize="16sp"
           android:layout_marginTop="20dp"
           android:textColor="@color/text_color_1"
           android:text="Last 10 Txn"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="5dp"
           android:orientation="horizontal">

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/tv_date"
               android:textSize="14sp"
               android:gravity="left"
               android:textColor="@color/text_color_2"
               android:layout_height="wrap_content"
               android:text="date"/>

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1.5"
               android:id="@+id/tv_operator"
               android:textSize="14sp"
               android:gravity="center"
               android:textColor="@color/text_color_2"
               android:layout_height="wrap_content"
               android:text="operator"/>


           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/tv_number"
               android:textSize="14sp"
               android:gravity="center"
               android:textColor="@color/text_color_2"
               android:layout_height="wrap_content"
               android:text="number"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/tv_amount"
               android:textSize="14sp"
               android:gravity="center"
               android:textColor="@color/text_color_2"
               android:layout_height="wrap_content"
               android:text="amount"/>

           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/tv_status"
               android:textSize="14sp"
               android:gravity="center"
               android:textColor="@color/text_color_2"
               android:layout_height="wrap_content"
               android:text="status"/>


       </LinearLayout>
       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/recyclerView">

       </androidx.recyclerview.widget.RecyclerView>

       <RelativeLayout
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="10dp"
           android:layout_gravity="center_horizontal"
           android:src="@drawable/ic_refresh">

           <ImageButton
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:background="@drawable/bg_blue_30"
               android:id="@+id/btn_refresh"
               android:visibility="gone"
               tools:visibility="visible"
               android:layout_gravity="center_horizontal"
               android:src="@drawable/ic_refresh"/>

           <ProgressBar
               android:id="@+id/progressBar"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:layout_centerInParent="true"
               android:indeterminateDrawable="@drawable/myprogress_style" />

       </RelativeLayout>
   </LinearLayout>





</ScrollView>