<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="16dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/root_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:padding="8dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="start"
                android:textStyle="bold"
                android:layout_marginStart="0dp"
                android:text="Transaction Confirmation?"
                android:textColor="@color/black2" />

            <ImageButton
                android:id="@+id/btn_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_cross_close2"
                app:tint="@color/red" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="â‚¹ 100"
            android:id="@+id/tv_amount"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text=" : " />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:layout_gravity="center"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_account_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="A/C Number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text=" : " />

            <TextView
                android:id="@+id/tv_account_number"
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/ll_bank_name"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bank_name_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="Bank Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text=" : " />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/ll_ifsc"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="normal"
                android:text="Ifsc Code" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text=" : " />

            <TextView
                android:id="@+id/tv_ifsc_code"
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="" />

        </LinearLayout>





        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_confirm_amount"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Confirm Amount"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_confirm_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:singleLine="true"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm"
            style="@style/AppButton"
            android:text="Confirm &amp; Proceed"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>